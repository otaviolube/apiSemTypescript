{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 13
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "class-methods-use-this": ["error", { "enforceForClassFields": true }]
    }
}
